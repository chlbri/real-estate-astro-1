---
import headerImage from '@-images/house-banner.png';
import { Image } from 'astro:assets';
---

<header class='h-full max-h-[640px] mb-8 xl:mb-24'>
  <div class='flex flex-col lg:flex-row'>
    <div
      class='lg:ml-8 xl:ml-[135px] flex flex-col items-center lg:items-start text-center lg:text-left justify-center flex-1 px-4 lg:px-0'
    >
      <h1 class='text-4xl lg:text-[58px] font-semibold leading-none mb-6'>
        <span class='text-violet-700'>Rent</span> Your Dream House With Us.
      </h1>
      <p class='max-w-[480px] mb-8'>
        Powerful, self-serve product and growth analytics to help you
        convert, engage, and retain more.
      </p>
    </div>
    <Image
      class='hidden flex-1 lg:flex justify-end items-end'
      src={headerImage}
      alt='the banner'
    />
  </div>
</header>
