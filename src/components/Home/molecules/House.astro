---
import AreaIcon from '../atoms/icons/AreaIcon.astro';
import BathIcon from '../atoms/icons/BathIcon.astro';
import BedIcon from '../atoms/icons/BedIcon.astro';

const house: any = {};
---

<div
  class='bg-white shadow-1 p-5 rounded-lg rounded-tl-[90px] w-full max-w-[352px] mx-auto cursor-pointer hover:shadow-2xl transition'
>
  <img class='mb-8' src={house.image} alt='' />
  <div class='mb-4 flex gap-x-2 text-sm'>
    <div class='bg-green-500 rounded-full text-white px-3 inline-block'>
      {house.type}
    </div>
    <div class='bg-violet-500 rounded-full text-white px-3 inline-block'>
      {house.country}
    </div>
  </div>
  <div class='text-lg font-semibold max-w-[260px]'>
    {house.address}
  </div>
  <div class='flex gap-x-4 my-4'>
    <div class='flex items-center text-gray-600 gap-1'>
      <div class='text-[20px] rounded-full'>
        <BedIcon />
      </div>
      <div class='text-base'>{house.bedrooms}</div>
    </div>
    <div class='flex items-center text-gray-600 gap-1'>
      <div class='text-[20px] rounded-full'>
        <BathIcon />
      </div>
      <div class='text-base'>{house.bathrooms}</div>
    </div>
    <div class='flex items-center text-gray-600 gap-1'>
      <div class='text-[20px] rounded-full'>
        <AreaIcon />
      </div>
      <div class='text-base'>{house.surface}</div>
    </div>
  </div>
  <div class='text-lg font-semibold text-violet-600 mb-4'>
    $ {house.price}
  </div>
</div>
